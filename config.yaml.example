# Trading Strategy Configuration

# Which strategy to use: dca, rebalance, price_based, or custom
active_strategy: dca

# DCA (Dollar Cost Averaging) Strategy
dca:
  # Token to sell (use 0xEeeeeEeeeEeEeeEeEeEeeEEEeeeeEeeeeeeeEEeE for ETH)
  sell_token: "0x833589fCD6eDb6E08f4c7C32D4f71b54bdA02913"  # USDC on Base
  # Token to buy
  buy_token: "0x4200000000000000000000000000000000000006"   # WETH on Base
  # Percentage of sell token to swap each time (1-100)
  sell_percentage: 10
  # How often to execute (in seconds)
  interval_seconds: 86400  # Daily
  # Slippage tolerance (0.01-50)
  slippage_percentage: 1.0

# Rebalancing Strategy
rebalance:
  # Target portfolio allocation (must sum to 100)
  target_allocation:
    "0xEeeeeEeeeEeEeeEeEeEeeEEEeeeeEeeeeeeeEEeE": 30  # ETH: 30%
    "0x833589fCD6eDb6E08f4c7C32D4f71b54bdA02913": 40  # USDC: 40%
    "0x4200000000000000000000000000000000000006": 30  # WETH: 30%
  # Rebalance when allocation drifts by this percentage
  drift_threshold: 5
  # How often to check (in seconds)
  check_interval_seconds: 3600  # Hourly
  # Slippage tolerance
  slippage_percentage: 1.0

# Price-Based Strategy
price_based:
  # Token pair to trade
  sell_token: "0x833589fCD6eDb6E08f4c7C32D4f71b54bdA02913"  # USDC
  buy_token: "0x4200000000000000000000000000000000000006"   # WETH
  # Trading rules
  rules:
    # Buy when price drops below threshold
    - condition: "price_drop"
      threshold_percentage: 5
      action: "buy"
      sell_percentage: 20
    # Sell when price rises above threshold
    - condition: "price_increase"
      threshold_percentage: 10
      action: "sell"
      sell_percentage: 50
  # Slippage tolerance
  slippage_percentage: 1.0

# Risk Management
risk_management:
  # Maximum percentage of portfolio to trade in a single transaction
  max_trade_percentage: 25
  # Minimum time between trades (seconds)
  min_trade_interval: 300
  # Stop trading if total portfolio value drops below this percentage
  stop_loss_percentage: 20

# Common Base Mainnet Tokens (for reference)
# ETH: 0xEeeeeEeeeEeEeeEeEeEeeEEEeeeeEeeeeeeeEEeE
# WETH: 0x4200000000000000000000000000000000000006
# USDC: 0x833589fCD6eDb6E08f4c7C32D4f71b54bdA02913
